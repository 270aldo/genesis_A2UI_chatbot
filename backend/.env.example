# NGX A2UI Backend Environment Variables

# Required: Gemini API Key
GOOGLE_API_KEY=your_gemini_api_key_here

# Optional: Server Configuration
PORT=8000
LOG_LEVEL=INFO

# Optional: CORS (JSON array)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "*"]

# Optional: Supabase (for clipboard + wearables persistence)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Optional: Wearables OAuth
GARMIN_CLIENT_ID=
GARMIN_CLIENT_SECRET=
GARMIN_REDIRECT_URI=
GARMIN_AUTH_URL=https://connect.garmin.com/oauthConfirm
GARMIN_TOKEN_URL=https://connectapi.garmin.com/oauth-service/oauth/access_token
GARMIN_API_BASE=https://apis.garmin.com/wellness-api/rest

OURA_CLIENT_ID=
