# NGX GENESIS V3 - Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# Optional: Region (default: us-central1)
region = "us-central1"

# Optional: Environment name
environment = "prod"

# Optional: Custom domain (leave empty for IP-only access)
domain = ""  # e.g., "api.genesis.mx"

# Optional: Public API base URL (for scheduler jobs)
api_base_url = ""  # e.g., "https://api.genesis.mx"

# Optional: Rate limiting (requests per minute per IP)
rate_limit_threshold = 100

# Optional: Redis configuration
redis_tier           = "BASIC"  # or "STANDARD_HA" for high availability
redis_memory_size_gb = 1

# Optional: Wearables daily sync (Cloud Scheduler)
wearables_sync_enabled   = false
wearables_sync_schedule  = "0 6 * * *"
wearables_sync_time_zone = "UTC"

# Optional: Cloud Tasks
cloud_tasks_queue_name    = "genesis-wearables-sync"
cloud_tasks_location      = "us-central1"
cloud_tasks_service_account = ""

# Optional: Custom labels
labels = {
  project     = "ngx-genesis"
  environment = "prod"
  managed-by  = "terraform"
  team        = "engineering"
}

